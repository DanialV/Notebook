<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form id="add_phone_data" role="form" novalidate method="POST">
                <fieldset>
                    <h2 >اضافه کردن شماره تلفن</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        <input type="hidden" name="_csrf" value="<%- csrfToken%>">
                        <input type="text" name="name" id="name" class="form-control input-lg" placeholder="نام و نام خانوادگی / عنوان" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="place" id="place" class="form-control input-lg" placeholder="" required>
                    </div>
                    <div class="form-group">
                        <input type="number" name="number" id="number" class="form-control input-lg" placeholder="شماره تلفن" required>
                    </div>
                    <div class="form-group">
                        <input type="number" name="inside_number" id="inside_number" class="form-control input-lg" placeholder="شماره تلفن داخلی" required>
                    </div>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input id="submit" type="submit" class="btn btn-lg btn-success btn-block" value="ذخیره">
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

</div>